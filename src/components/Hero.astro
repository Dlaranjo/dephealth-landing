---
interface Props {
  formId?: string
}

const { formId = 'YOUR_FORM_ID' } = Astro.props
---

<section class="pt-8 pb-12 md:pt-16 md:pb-20 animate-fade-in-up stagger-1 opacity-0">
  <div class="text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 text-sm rounded-full bg-blue-500/10 border border-blue-500/30 text-blue-400">
      <span class="w-1.5 h-1.5 bg-blue-400 rounded-full animate-pulse-dot"></span>
      <span>Launching Soon</span>
    </div>

    <!-- Headline -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 leading-[1.1]">
      Know which dependencies will
      <span class="gradient-text"> fail before</span>
      they break your build
    </h1>

    <!-- Subtitle -->
    <p class="text-lg md:text-xl text-zinc-400 max-w-2xl mx-auto mb-10 leading-relaxed">
      Predictive health scores for npm packages. Get warned about abandonment risk months before it becomes your 3am incident.
    </p>

    <!-- Signup Form -->
    <div class="max-w-md mx-auto">
      <form
        id="hero-form"
        action={`https://formspree.io/f/${formId}`}
        method="POST"
        class="flex flex-col sm:flex-row gap-3 mb-3"
      >
        <input
          type="email"
          name="email"
          placeholder="Enter your email"
          required
          class="flex-1 px-5 py-4 text-base bg-[--color-bg-card] border border-[--color-border] rounded-xl text-white placeholder-zinc-500 transition-all"
        />
        <button
          type="submit"
          class="btn-gradient px-7 py-4 text-base font-semibold text-white rounded-xl whitespace-nowrap"
        >
          Get Early Access
        </button>
      </form>

      <p class="flex items-center justify-center gap-2 text-sm text-zinc-500">
        <svg class="w-4 h-4 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
        No spam. Unsubscribe anytime.
      </p>
    </div>
  </div>
</section>
